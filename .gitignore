.env
.env.local
.env.*.local

# caches and lockstores
.npm/
.pnpm-store/
.cache/
.sass-cache/

# Keep workspace settings in repo except extension recommendations
.vscode/*
!.vscode/extensions.json

# ------------------------
# Python / Backend
# ------------------------
__pycache__/
*.py[cod]
*$py.class
.Python
env/
venv/
.venv/
pip-wheel-metadata/
*.egg-info/
dist/
build/
.pytest_cache/
.mypy_cache/
.coverage
coverage.xml
__pypackages__/
celerybeat-schedule
celerybeat.pid

# Local settings and instance folders
instance/
local_settings.py

# Python bytecode cache
**/__pycache__/

